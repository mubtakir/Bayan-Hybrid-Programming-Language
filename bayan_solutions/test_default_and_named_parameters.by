# اختبار المعاملات الافتراضية والمسماة
# Test Default and Named Parameters

# ============ اختبار 1: المعاملات الافتراضية البسيطة ============
# Test 1: Simple Default Parameters

def greet(name, greeting="مرحبا"):
{
    print(greeting + " " + name)
}

# استدعاء مع معامل واحد فقط
greet("أحمد")

# استدعاء مع معاملين
greet("فاطمة", "السلام عليكم")

# ============ اختبار 2: معاملات افتراضية متعددة ============
# Test 2: Multiple Default Parameters

def create_user(name, age=18, city="الرياض"):
{
    print("الاسم: " + name)
    print("العمر: ")
    print(age)
    print("المدينة: " + city)
}

create_user("علي")
create_user("سارة", 25)
create_user("محمد", 30, "جدة")

# ============ اختبار 3: المعاملات المسماة ============
# Test 3: Named Arguments

def calculate(a, b, operation="جمع"):
{
    if operation == "جمع":
    {
        print(a + b)
    }
    elif operation == "طرح":
    {
        print(a - b)
    }
    elif operation == "ضرب":
    {
        print(a * b)
    }
}

# استدعاء مع معاملات موضعية
calculate(10, 5)

# استدعاء مع معاملات مسماة
calculate(a=10, b=5, operation="طرح")

# ============ اختبار 4: خليط من المعاملات الموضعية والمسماة ============
# Test 4: Mix of Positional and Named Arguments

def format_text(text, prefix=">>", suffix="<<"):
{
    print(prefix + " " + text + " " + suffix)
}

format_text("مرحبا")
format_text("مرحبا", "==")
format_text("مرحبا", suffix="**")
format_text("مرحبا", prefix="--", suffix="--")

# ============ اختبار 5: الأصناف مع المعاملات الافتراضية ============
# Test 5: Classes with Default Parameters

class Person:
{
    def __init__(self, name, age=0, job="بدون وظيفة"):
    {
        self.name = name
        self.age = age
        self.job = job
    }
    
    def display(self):
    {
        print("الاسم: " + self.name)
        print("العمر: ")
        print(self.age)
        print("الوظيفة: " + self.job)
    }
}

# إنشاء كائنات مع معاملات افتراضية
p1 = Person("أحمد")
p1.display()

p2 = Person("فاطمة", 28)
p2.display()

p3 = Person("محمد", 35, "مهندس")
p3.display()

# ============ اختبار 6: طرق الأصناف مع المعاملات المسماة ============
# Test 6: Class Methods with Named Arguments

class Calculator:
{
    def add(self, a, b, show_result=True):
    {
        result = a + b
        if show_result:
        {
            print("النتيجة: ")
            print(result)
        }
        return result
    }
}

calc = Calculator()
calc.add(5, 3)
calc.add(10, 20, show_result=False)
calc.add(a=7, b=8, show_result=True)

print("✅ جميع الاختبارات نجحت!")

