# ==================== قواعس الاستعلام ====================

# الحصول على جميع أنواع قواعس البيانات
جميع_أنواع_قواعس_البيانات(?الأنواع) :-
    findall(?ن, نوع_قاعدة_بيانات(?ن, _), ?الأنواع).

# الحصول على جميع مصادر التعلم
جميع_مصادر_التعلم(?المصادر) :-
    findall(?م, مصدر_تعلم(?م, _), ?المصادر).

# البحث عن مفهوم رياضي
بحث_مفهوم_رياضي(?المفهوم, ?التعريف) :-
    مفهوم_رياضي(?المفهوم, ?التعريف, _, _).

# البحث عن قانون فيزيائي
بحث_قانون_فيزيائي(?القانون, ?الوصف) :-
    قانون_فيزيائي(?القانون, ?الوصف, _, _).

# البحث عن مفهوم لغوي
بحث_مفهوم_لغوي(?المفهوم, ?التعريف) :-
    مفهوم_لغوي(?المفهوم, ?التعريف, _, _).

# الحصول على جميع الرموز
جميع_الرموز(?الرموز) :-
    findall(?ر, رمز(?ر, _, _, _), ?الرموز).

# الحصول على جميع الأنماط البصرية
جميع_الأنماط_البصرية(?الأنماط) :-
    findall(?ن, نمط_بصري(?ن, _, _, _), ?الأنماط).

# الحصول على جميع العلاقات الدلالية
جميع_العلاقات_الدلالية(?العلاقات) :-
    findall(?ع, علاقة_دلالية(?ع, _, _, _), ?العلاقات).

