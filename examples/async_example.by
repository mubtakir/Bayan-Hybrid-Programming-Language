# مثال: استخدام async/await في لغة البيان
# Example: Using async/await in Bayan language

# دالة async بسيطة
# Simple async function
async def fetch_data(url): {
    print(f"Fetching data from {url}...")
    return f"Data from {url}"
}

# دالة async تستدعي دالة async أخرى
# Async function calling another async function
async def process_data(url): {
    print(f"Processing {url}...")
    data = await fetch_data(url)
    print(f"Received: {data}")
    return data
}

# دالة async مع معالجة أخطاء
# Async function with error handling
async def fetch_safe(url): {
    try: {
        data = await fetch_data(url)
        return data
    } except: {
        print("Error fetching data")
        return None
    }
}

# دالة async تعالج قائمة من URLs
# Async function processing a list of URLs
async def fetch_all(urls): {
    results = []
    for url in urls: {
        data = await fetch_data(url)
        results.append(data)
    }
    return results
}

