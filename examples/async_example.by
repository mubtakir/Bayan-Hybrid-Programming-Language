# مثال 2: دوال async متداخلة
# Example 2: Nested async functions
print("Example 2: Nested async functions")
async def outer(): {
    print("Outer function started")
    
    async def inner(): {
        print("Inner function executed")
        return 42
    }
    
    result = await inner()
    print(f"Inner result: {result}")
    return result
}
print()

# مثال 3: async مع حلقات
# Example 3: async with loops
print("Example 3: Async with loops")
async def count_async(n): {
    for i in range(n): {
        print(f"Count: {i}")
    }
    return n
}
